{
  "name": "class-hooks",
  "version": "1.0.3",
  "description": "react hooks for class components",
  "keywords": [
    "react",
    "hooks",
    "class components",
    "class hooks"
  ],
  "author": "Roy Sommer",
  "main": "dist/src/index.js",
  "license": "ISC",
  "files": [
    "README.md",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/illberoy/class-hooks.git"
  },
  "scripts": {
    "start": "node .",
    "test": "npm run test:unit && npm run test:e2e",
    "pretest": "npm run build",
    "test:unit": "jest",
    "test:e2e": "jest --testRegex '.+\\.e2e\\.(ts|tsx)' --forceExit",
    "prerelease": "npm run clean && npm run build && npm test",
    "release": "release-it",
    "posttest": "npm run lint",
    "lint": "tslint --project tsconfig.json",
    "clean": "rm -rf dist",
    "build": "npm run build:typescript",
    "build:typescript": "tsc"
  },
  "devDependencies": {
    "@testing-library/react": "^9.3.2",
    "@types/faker": "^4.1.7",
    "@types/jest": "^24.0.22",
    "@types/node": "^12.12.7",
    "@types/puppeteer": "^1.20.2",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "axios": "^0.19.0",
    "faker": "^4.1.0",
    "jest": "^24.9.0",
    "parcel-bundler": "^1.12.4",
    "puppeteer": "^2.0.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "release-it": "^12.4.3",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.7.2",
    "wix-eventually": "^2.2.0"
  },
  "peerDependencies": {
    "react": "^16.3.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)$": "ts-jest"
    },
    "roots": [
      "src",
      "test"
    ],
    "testEnvironment": "jsdom",
    "testRegex": "^.+\\.spec\\.(ts|tsx|js)?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "dependencies": {
    "uuid": "^3.3.3"
  }
}
