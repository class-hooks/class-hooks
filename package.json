{
  "name": "class-hooks",
  "version": "0.0.1",
  "description": "react hooks for class components",
  "keywords": ["react", "hooks", "class components", "class hooks"],
  "author": "Roy Sommer",
  "main": "dist/src/index.js",
  "license": "ISC",
  "files": [
    "README.md",
